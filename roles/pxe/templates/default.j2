timeout 120
display boot.msg
default 2
prompt  1

label 1
  menu label ^Install CentOS 8 from PXE server
  kernel vmlinuz
  append initrd=initrd.img showopts ks=nfs:{{ control_aliases.nfs }}.{{ domain_name }}:/var/pxe/kickstart/kickstart.cfg ip=dhcp net.ifnames=0 biosdevname=0

label 2
  menu label Boot from ^Boot from local disk
  localboot 0x80

menu end
